
NAME = alum1

CC = gcc

CFLAGS = -Wall -Wextra -Werror

HIDDIRS = -I . alum.h

SRC = alum1.c alum2.c ./get_next_line/get_next_line.c

RM = rm -f

OBJ = $(patsubst %.c,./%.o,$(SRC))

MAKE = make

all: $(NAME)

$(NAME): $(OBJ)
	@$(MAKE) -C ./get_next_line/libft
	@$(CC) $(CFLAGS) $(OBJ) -L get_next_line/libft/ -lft -o $(NAME)

./%.o: %.c
	@$(CC) $(CFLAGS) -c -o $@ $<

clean:
	@$(MAKE) clean -C ./get_next_line/libft
	@$(RM) $(OBJ)

fclean: clean
	@$(MAKE) fclean -C ./get_next_line/libft
	@$(RM) $(NAME) alum

re: fclean all

.PHONY: clean fclean re